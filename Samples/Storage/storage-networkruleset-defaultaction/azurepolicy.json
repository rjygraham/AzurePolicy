{
	"properties": {
		"displayName": "Deny Storage Account public endpoint",
		"description": "Denies creation of Storage Accounts with public endpoints unless override tag with specific value is present.",
		"mode": "Indexed",
		"metadata": {
			"version": "1.0.0",
			"category": "Storage"
		},
		"parameters": {
			"tagName": {
				"type": "String",
				"metadata": {
					"displayName": "Override Tag Name",
					"description": "Name of the tag to override policy."
				}
			},
			"tagValue": {
				"type": "String",
				"metadata": {
					"displayName": "Override Tag Value",
					"description": "Value of the tag to override policy."
				}
			}
		},
		"policyRule": {
			"if": {
				"allOf": [
					{
						"field": "type",
						"equals": "Microsoft.Storage/storageAccounts"
					},
					{
						"field": "Microsoft.Storage/storageAccounts/networkAcls.defaultAction",
						"notEquals": "deny"
					},
					{
						"not": {
							"allOf": [
								{
									"field": "[concat('tags[', parameters('tagName'), ']')]",
									"exists": "true"
								},
								{
									"field": "[concat('tags[', parameters('tagName'), ']')]",
									"contains": "[parameters('tagValue')]"
								}
							]
						}
					}
				]
			},
			"then": {
				"effect": "append",
				"details": [
					{
						"field": "Microsoft.Storage/storageAccounts/networkAcls.defaultAction",
						"value": "deny"
					}
				]
			}
		}
	}
}